  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "NewsResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "example": "Veterinarian Day"
            },
            "url": {
              "type": "string",
              "example": "https://www.example.com.ua/"
            },
            "description": {
              "type": "string",
              "example": "May walks with your pet are not only pleasant"
            },
            "date": {
              "type": "string",
              "example": "2022-05-01"
            }
          }
        }
      },

      "ServicesResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "example": "Animal shelter"
            },
            "url": {
              "type": "string",
              "example": "https://www.example.com.ua/"
            },
            "addressUrl": {
              "type": "string",
              "example": "https://www.example/maps/"
            },
            "imageUrl": {
              "type": "string",
              "example": "https://storage.example/images/"
            },
            "address": {
              "type": "string",
              "example": "Fedorivka, Kyiv Oblast, Ukraine, 07372"
            },
            "workDays": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "isOpen": {
                    "type": "boolean",
                    "example": "true"
                  },
                  "from": {
                    "type": "string",
                    "example": "09:00"
                  },
                  "to": {
                    "type": "string",
                    "example": "20:00"
                  }
                }
              }
            },
            "phone": {
              "type": "string",
              "example": "+380931934069"
            },
            "email": {
              "type": "string",
              "example": "hello@happypaw.ua"
            }
          }
        }
      }
    },

    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
